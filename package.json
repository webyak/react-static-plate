{
  "name": "react-static-plate",
  "version": "0.1.0",
  "description": "Build static sites with React to host on Amazon S3, Github Pages, Surge et cetera",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start:dev": "babel-node ./tools/dev_server.js",
    "start": "npm run start:dev",
    "clean": "rimraf build",
    "build:bundle": "cross-env NODE_ENV=production webpack --config ./tools/webpack.prod.config.js",
    "build:static": "cross-env NODE_ENV=production babel-node ./tools/build_static_entry.js",
    "build": "npm run clean && npm run build:bundle && npm run build:static"
  },
  "plate_config": {
    "website": "http://example.com"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "strict": [
        2,
        "never"
      ],
      "new-cap": 0,
      "global-require": 0
    }
  },
  "engines": {
    "node": ">=4.4"
  },
  "dependencies": {
    "radium": "^0.18.1",
    "radium-normalize": "^2.0.4",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-fastclick": "^2.1.2",
    "react-helmet": "^3.1.0",
    "react-router": "^2.6.1",
    "react-router-scroll": "^0.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^2.0.0",
    "eslint": "^3.3.1",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.13.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.1.2",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "lodash": "^4.15.0",
    "mkdirp": "^0.5.1",
    "redbox-react": "^1.3.0",
    "rimraf": "^2.5.4",
    "sitemap": "^1.8.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-isomorphic-tools": "^2.5.7"
  },
  "author": "Yannik Schweinzer",
  "repository": {
    "type": "git",
    "url": "https://github.com/webyak/react-static-plate"
  }
}
